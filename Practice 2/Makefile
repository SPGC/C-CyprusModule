obj:
	mkdir obj

obj/Task1.o: src/Task1.cpp
	g++ $(CCFLAGS) --std=c++17 -o obj/Task1.o -c src/Task1.cpp

obj/Task2.o: src/Task2.cpp
	g++ $(CCFLAGS) --std=c++17 -o obj/Task2.o -c src/Task2.cpp

obj/Task3.o: src/Task3.cpp
	g++ $(CCFLAGS) --std=c++17 -o obj/Task3.o -c src/Task3.cpp

obj/Task4.o: src/Task4.cpp
	g++ $(CCFLAGS) --std=c++17 -o obj/Task4.o -c src/Task4.cpp

