CCFLAGS = -Wall -Werror -Wextra

Task1: obj obj/Task1.o
	g++ $(CCFLAGS) --std=c++17 -o Task1 obj/Task1.o
	chmod +x Task1

Task2: obj obj/Task2.o
	g++ $(CCFLAGS) --std=c++17 -o Task2 obj/Task2.o
	chmod +x Task2

Task3: obj obj/Task3.o
	g++ $(CCFLAGS) --std=c++17 -o Task3 obj/Task3.o
